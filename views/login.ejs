<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dinamika E-Catalog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container text-white d-flex justify-content-center">
      <section class="vh-100">
        <div class="container py-5 h-100">
          <div
            class="row d-flex align-items-center justify-content-center h-100"
          >
            <div class="col-md-8 col-lg-7 col-xl-6">
              <img
                src="/images/undraw_secure_login_pdn4.svg"
                class="img-fluid"
                alt="Phone image"
              />
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
              <h2 class="text-center mb-5">Login</h2>
              <form class="/" method="post">
                <!-- Username input -->
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    class="form-control"
                    id="usernameInput"
                    placeholder="John Doe"
                    name="username"
                    required
                  />
                  <label for="usernameInput">Username</label>
                </div>

                <!-- Password input -->
                <div class="form-floating">
                  <input
                    type="password"
                    class="form-control"
                    id="passwordInput"
                    placeholder="Password"
                    name="password"
                    required
                  />
                  <label for="passwordInput">Password</label>
                </div>

                <div
                  class="d-flex justify-content-around align-items-center my-3"
                >
                  <a href="/registrasi">Tidak punya akun?</a>
                </div>

                <!-- Submit button -->
                <div class="d-grid">
                  <button class="btn btn-primary" type="submit">Login</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
