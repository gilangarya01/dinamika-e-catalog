<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>E-Catalog - Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/custom.css" />
  </head>
  <body>
    <main class="d-flex flex-row">
      <div
        class="sidebar d-flex flex-column flex-shrink-0 p-3 text-white vh-100"
        style="width: 250px; background-color: #2f343a"
      >
        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <i class="fa-solid fa-shop"></i>
          <span class="fs-4 ms-2">E-Catalog</span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="mb-2">
            <a href="/admin/dashboard" class="nav-link text-white">
              <i class="fa-solid fa-house"></i>
              Dashboard
            </a>
          </li>
          <li class="mb-2">
            <a href="/admin/products" class="nav-link text-white">
              <i class="fa-solid fa-box"></i>
              Products
            </a>
          </li>
          <li class="mb-2">
            <a href="/admin/transactions" class="nav-link text-white">
              <i class="fa-solid fa-money-bill"></i>
              Transactions
            </a>
          </li>
          <li class="mb-2">
            <a href="/admin/useraccess" class="nav-link text-white opened">
              <i class="fa-solid fa-address-card"></i>
              Users Access
            </a>
          </li>
        </ul>
        <hr />
        <div class="d-grid gap-2">
          <a
            href=""
            data-bs-toggle="modal"
            data-bs-target="#konfirmasiModal"
            class="btn btn-danger"
            >Logout</a
          >
        </div>
      </div>
      <!-- Modal -->
      <div
        class="modal fade"
        id="konfirmasiModal"
        tabindex="-1"
        aria-labelledby="konfirmasiModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="konfirmasiModalLabel">
                Logout Akun
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              Apa anda yakin ingin logout dari akun ?
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <a href="/admin/logout" class="btn btn-danger">Logout</a>
            </div>
          </div>
        </div>
      </div>
      <!-- Content -->
      <div class="content w-100 p-3">
        <div
          class="rounded ps-3 pt-2 pb-1 mb-3"
          style="background-color: #2f343a"
        >
          <h4>User Access</h4>
        </div>
        <div class="rounded p-2" style="background-color: #2f343a">
          <a
            href="/admin/useraccess/user"
            class="btn btn-success float-end mb-2"
            ><i class="fa-solid fa-plus"></i> Tambah Admin</a
          >
          <table class="table table-striped table-bordered text-center">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Access</th>
                <th scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% users.forEach((user,i) => { %>
              <tr>
                <th scope="row"><%= ++i %></th>
                <td><%= user.username %></td>
                <td>Admin</td>
                <td>
                  <a
                    href=""
                    class="badge text-bg-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#modal<%= i %>"
                    ><i class="fa-solid fa-trash"></i> Remove</a
                  >
                </td>
              </tr>
              <!-- Modal -->
              <div
                class="modal fade"
                id="modal<%= i %>"
                tabindex="-1"
                aria-labelledby="modalLabel"
                aria-hidden="true"
              >
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="modalLabel">
                        Admin Level
                      </h1>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                      ></button>
                    </div>
                    <div class="modal-body">
                      Yakin ingin menghapus access admin user ini?
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Close
                      </button>
                      <form action="/admin/useraccess/remove" method="post">
                        <input
                          type="hidden"
                          name="id"
                          value="<%= user._id  %>"
                        />
                        <button type="submit" class="btn btn-primary">
                          Ya
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/custom.js"></script>
  </body>
</html>
