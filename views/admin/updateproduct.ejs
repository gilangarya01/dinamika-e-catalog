<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>E-Catalog - Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/custom.css" />
  </head>
  <body>
    <main class="d-flex flex-row">
      <div
        class="sidebar d-flex flex-column flex-shrink-0 p-3 text-white vh-100"
        style="width: 250px; background-color: #2f343a"
      >
        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <i class="fa-solid fa-shop"></i>
          <span class="fs-4 ms-2">E-Catalog</span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="mb-2">
            <a href="/admin/dashboard" class="nav-link text-white">
              <i class="fa-solid fa-house"></i>
              Dashboard
            </a>
          </li>
          <li class="mb-2">
            <a href="/admin/products" class="nav-link text-white opened">
              <i class="fa-solid fa-box"></i>
              Products
            </a>
          </li>
          <li class="mb-2">
            <a href="/admin/transactions" class="nav-link text-white">
              <i class="fa-solid fa-money-bill"></i>
              Transactions
            </a>
          </li>
          <li class="mb-2">
            <a href="/admin/useraccess" class="nav-link text-white">
              <i class="fa-solid fa-address-card"></i>
              Users Access
            </a>
          </li>
        </ul>
        <hr />
        <div class="d-grid gap-2">
          <a href="/admin/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
      <!-- Content -->
      <div class="content w-100 p-3">
        <div
          class="rounded ps-3 pt-2 pb-1 mb-3"
          style="background-color: #2f343a"
        >
          <h4>Update Product</h4>
        </div>
        <div class="rounded p-4" style="background-color: #2f343a">
          <!-- Split Satuan -->
          <% let satuan = product.satuan.split(" ") %>

          <form
            action="/admin/products/update/<%= product._id %>"
            method="post"
          >
            <div class="mb-3">
              <label for="basic-url" class="form-label">Nama Product</label>
              <div class="input-group">
                <input
                  type="text"
                  class="form-control"
                  id="basic-url"
                  placeholder="Produkku"
                  name="nama"
                  value="<%= product.nama %>"
                  required
                />
              </div>
            </div>

            <div class="mb-3">
              <label for="basic-url" class="form-label"
                >Deskripsi Product</label
              >
              <div class="input-group">
                <textarea
                  class="form-control"
                  id="basic-url"
                  rows="3"
                  name="deskripsi"
                  required
                >
<%= product.deskripsi %></textarea
                >
              </div>
            </div>

            <div class="mb-3">
              <label for="basic-url" class="form-label">Harga Eceran</label>
              <div class="input-group">
                <span class="input-group-text">Rp</span>
                <input
                  type="text"
                  class="form-control"
                  placeholder="1000"
                  name="hargaEceran"
                  value="<%= product.hargaEceran %>"
                  required
                />
                <span class="input-group-text">.00</span>
              </div>
            </div>

            <div class="mb-3">
              <label for="basic-url" class="form-label">Harga Grosir</label>
              <div class="input-group">
                <span class="input-group-text">Rp</span>
                <input
                  type="text"
                  class="form-control"
                  placeholder="500"
                  name="hargaGrosir"
                  value="<%= product.hargaGrosir %>"
                  required
                />
                <span class="input-group-text">.00</span>
              </div>
            </div>

            <div class="mb-3 col-4">
              <label for="basic-url" class="form-label">Satuan</label>
              <div class="input-group">
                <input
                  type="number"
                  class="form-control me-2"
                  id="basic-url"
                  placeholder="10"
                  name="satuan"
                  value="<%= satuan[0] %>"
                  required
                />
                <input
                  type="text"
                  class="form-control"
                  id="basic-url"
                  placeholder="Liter"
                  name="massa"
                  value="<%= satuan[1] %>"
                  required
                />
              </div>
            </div>

            <div class="mb-3 col-4">
              <label for="basic-url" class="form-label">Stok</label>
              <div class="input-group">
                <input
                  type="number"
                  class="form-control"
                  id="basic-url"
                  placeholder="100"
                  name="stok"
                  value="<%= product.stok %>"
                  required
                />
              </div>
            </div>

            <div class="btn-area">
              <a href="/admin/products" class="btn btn-secondary">Batal</a>
              <button type="submit" class="btn btn-primary">Tambah</button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
